<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd">
<suite name="Grouping-Suite">

    <listeners>
        <listener class-name="utilities.TestListenerClass"/>
    </listeners>

    <test name="SmokeTests">
        <groups>
            <run>
                <include name="smoke"/>
            </run>
        </groups>
        <classes>
            <class name="testCases.TC001_LoginTest"/>
            <class name="testCases.TC003_PIM_AddEmployeeTest"/>
        </classes>
    </test>

    <test name="RegressionTests">
        <groups>
            <run>
                <include name="regression"/>
            </run>
        </groups>
        <classes>
            <class name="testCases.TC002_AdminSearchTest"/>
            <class name="testCases.TC004_Leave_ApplyTest"/>
        </classes>
    </test>

</suite>
